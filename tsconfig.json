{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "outDir": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "newLine": "LF",
    "typeRoots": ["node_modules/@types", "node_modules"],
    "types": ["node", "preact"]
  }
}
